.services
  .list
    -@services.each do |service|
      .service
        %h1
          =service.name
        %p
          =service.description
        -if authorized?
          .admin-actions
            =button_link_tag('Edit',"/#{service.id}/edit")
            =button_delete_tag('Delete', "/#{service.id}", "Are you sure you want to delete service and all the events?")
        .events
          %p
            %a{:href=>"/#{service.id}/"} Events
  
  -if authorized?
    .admin-actions
      =button_link_tag('New service', '/new')
